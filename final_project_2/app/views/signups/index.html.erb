<div class="page-header">
  <h1>
    Signups
    <a href="/signups/new" class="btn btn-lg btn-success">New Signup</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Guest name</th>
        <th>Identifier</th>
        <th>Event</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @signups.each do |signup| %>
      <tr>
        <td><%= signup.guest_name %></td>
        <td><%= signup.identifier %></td>
        <td><%= signup.event_id %></td>
        <td><%= signup.user_id %></td>
        <td>
          <a href="/signups/<%= signup.id %>" class="btn btn-primary">Show</a>
          <a href="/signups/<%= signup.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_signup/<%= signup.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
